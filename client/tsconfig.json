{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "importHelpers": true,
    "strict": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "typeRoots": [
      "./src/modules",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "extends": "./tsconfig.paths.json",
  "include": [
    "src"
  ]
}
